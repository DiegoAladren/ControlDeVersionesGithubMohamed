  public double[] ecuacionSegundoGrado(double a, double b, double c) {
        double discriminante = Math.pow(b, 2) - 4 * a * c;
        if (discriminante >= 0) {
            double[] raices = new double[2];
            raices[0] = (-b + Math.sqrt(discriminante)) / (2 * a);
            raices[1] = (-b - Math.sqrt(discriminante)) / (2 * a);
            return raices;
        } else {
            throw new IllegalArgumentException("La ecuaci√≥n no tiene soluciones reales");
        }
    } 
    

